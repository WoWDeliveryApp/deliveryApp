<% if @user.valid? %>
  $('#errors').html("")
  $('.regis-recipe').html("<%= 'Su cuenta ha sido creada exitosamente' %>")
  $('.regis-recipe').append("<%= escape_javascript (render partial: 'new_user_modal', locals: { user: @user }) %>")
<% else %>
  $('#errors').html("<%= escape_javascript (render partial: 'new_user_errors', locals: { errors: @user.errors.full_messages }) %>")
<% end %>
